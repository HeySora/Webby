{
  "name": "webby",
  "version": "1.0.1",
  "description": "Un assistant de création de Sites Web.",
  "main": "back/main.js",
  "scripts": {
    "start": "electron back/main.js",
    "pack": "build --dir",
    "dist": "build"
  },
  "build": {
    "appId": "net.heysora.webby",
    "productName": "Webby",
    "compression": "maximum",
    "copyright": "Copyright © 2017 HeySora & Zwahlenlo",
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "target": "portable"
    },
    "nsis": {
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "installerHeaderIcon": "build/icon.ico",
      "language": "4108"
    },
    "linux": {
      "icon": "build/linux-icons"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/HeySora/Webby.git"
  },
  "keywords": [
    "Webby",
    "Web"
  ],
  "author": "HeySora & Zwahlenlo",
  "license": "AGPL-3.0+",
  "devDependencies": {
    "electron": "~1.6.2",
    "electron-builder": "next"
  },
  "homepage": "https://webby.heysora.net",
  "dependencies": {
    "js-beautify": "^1.6.14"
  }
}
